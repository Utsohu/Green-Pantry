<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- layout for back and notifs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Go Back Clickable Text -->
        <TextView
            android:id="@+id/recipeBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pantryBack"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Notification Button -->
        <ImageButton
            android:id="@+id/notificationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notif"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:padding="2dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/Notifications"/>
    </LinearLayout>

    <!-- Recipe Title -->
    <TextView
        android:id="@+id/recipeDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/WelcomeBack"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="35sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/notificationButton"
        app:layout_constraintStart_toStartOf="parent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!-- recipe overview -->
                <LinearLayout
                    android:id="@+id/recipeOverview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/outlined_box"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recipeDetailTitle">

                    <ImageView
                        android:id="@+id/recipeImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:background="@drawable/outlined_box"
                        android:clipToOutline="true"/>

                    <!-- overview text -->
                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rowCount="3"
                        android:columnCount="3"
                        android:layout_margin="20dp">

                        <!-- time -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/timeAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/noVal"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/minute"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:textColor="@color/black" />

                        <!-- difficulty -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/difficulty"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/diffAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/noVal"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ten"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:textColor="@color/black" />

                        <!-- number of servings -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/numServing"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/numServings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/noVal"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"/>

                    </GridLayout>


                </LinearLayout>

                <!-- nutrition info -->
                <TextView
                    android:id="@+id/nutritionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nutritionTitle"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/recipeOverview"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- nutrition data -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <!-- column 1 -->
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- calories -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/calories"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/calAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/noVal"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/cal"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/light_gray" />

                        <!-- totalFat -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/totFat"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/totFatAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/noVal"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/gram"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                            </LinearLayout>
                        </LinearLayout>

                        <!-- divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/light_gray" />

                        <!-- Trans fat -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/transFat"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/transFatAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/noVal"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/gram"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                            </LinearLayout>
                        </LinearLayout>

                        <!-- divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/light_gray" />

                        <!-- sodium -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/sodium"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/sodiumAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/noVal"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/gram"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                            </LinearLayout>
                        </LinearLayout>

                        <!-- divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/light_gray" />

                        <!-- calcium -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/calcium"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/calciumAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/noVal"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/gram"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                            </LinearLayout>
                        </LinearLayout>

                        <!-- divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/light_gray" />

                    </LinearLayout>


                    <!-- column 2 -->
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="18dp">

                        <!-- fiber -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/fiber"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/fiberAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/noVal"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/gram"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/light_gray" />

                        <!-- sugar -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/sugar"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/sugarAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/noVal"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/gram"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                            </LinearLayout>
                        </LinearLayout>

                        <!-- divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/light_gray" />

                        <!-- protein -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/protein"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/proteinAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/noVal"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/gram"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                            </LinearLayout>
                        </LinearLayout>

                        <!-- divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/light_gray" />

                        <!-- iron -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/iron"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/ironAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/noVal"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/gram"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                            </LinearLayout>
                        </LinearLayout>

                        <!-- divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/light_gray" />

                        <!-- vitamin d -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/vitaminD"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/vitDAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/noVal"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/gram"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>

                            </LinearLayout>
                        </LinearLayout>

                        <!-- divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/light_gray" />

                    </LinearLayout>


                </LinearLayout>

                <!-- ingredient info  -->
                <TextView
                    android:id="@+id/ingredientTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ingredients"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/vitDAmt"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- ingredient items -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ingredientGrid"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginTop="5dp"
                    android:clipToPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/ingredientTitle"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- instruction info  -->
                <TextView
                    android:id="@+id/instructionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Instructions"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="20sp"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/ingredientGrid"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- instruction items -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/instructionGrid"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingBottom="75dp"
                    android:clipToPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/instructionTitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"  />


            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>

